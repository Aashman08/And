# LiteLLM Configuration (Proxy for OpenAI/Cohere)
# LiteLLM supports various providers through a unified interface
OPENAI_API_KEY=sk-your-openai-key-here
COHERE_API_KEY=your-cohere-key-here

# Pinecone (Vector Database)
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_INDEX_NAME=r2d-chunks
PINECONE_CLOUD=aws
PINECONE_ENVIRONMENT=us-west-2

# OpenSearch (BM25 Search)
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# PostgreSQL (Metadata Storage)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=r2d
POSTGRES_USER=r2d
POSTGRES_PASSWORD=r2d
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# API Configuration
ADMIN_BEARER_TOKEN=dev-admin-token
EMBEDDING_MODEL=intfloat/e5-base-v2

# Perplexity (Startup Discovery)
PERPLEXITY_API_KEY=your-perplexity-key-here

# LiteLLM Model Configuration
LITELLM_SUMMARIZATION_MODEL=gpt-4o-mini
LITELLM_RERANK_MODEL=command-r

# Application Settings
PYTHONHASHSEED=0
API_HOST=0.0.0.0
API_PORT=8000
NEXT_PUBLIC_API_URL=http://localhost:8000
